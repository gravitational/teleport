load("@io_bazel_rules_go//go:def.bzl", "go_binary", "go_library", "go_test")

go_library(
    name = "check_lib",
    srcs = ["main.go"],
    importpath = "github.com/gravitational/teleport/build.assets/tooling/cmd/check",
    visibility = ["//visibility:private"],
    deps = [
        "//build.assets/tooling/lib/github",
        "@com_github_gravitational_trace//:trace",
