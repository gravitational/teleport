go_test(
    name = "webclient_test",
    srcs = ["webclient_test.go"],
    embed = [":webclient"],
    deps = [
        "//api/defaults",
        "//api/testhelpers",
        "@com_github_google_go_cmp//cmp",
        "@com_github_stretchr_testify//require",
    ],
)
