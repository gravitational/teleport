# Generated by `tbot`
[Unit]
Description={{ .UnitName }} - Teleport Machine ID Service
After=network.target

[Service]
Type=simple
User={{ .User }}
Group={{ .Group }}
Restart=always
RestartSec=5
Environment="TELEPORT_ANONYMOUS_TELEMETRY={{ If .AnonymousTelemetry }}1{{ Else }}0{{ End }}"
ExecStart=/usr/local/bin/tbot start -c {{ .ConfigPath }}
ExecReload=/bin/kill -HUP $MAINPID
PIDFile=/run/{{ .UnitName }}.pid
LimitNOFILE=524288

[Install]
WantedBy=multi-user.target
