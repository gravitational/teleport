package(default_visibility = ["//:__subpackages__"])  # keep

load("@io_bazel_rules_go//go:def.bzl", "go_library", "go_test")

go_library(
    name = "go_default_library",
    srcs = [
        "hkdf.go",
        "subtle.go",
    ],
    importpath = "github.com/google/tink/go/subtle",
