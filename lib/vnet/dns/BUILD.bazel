go_test(
    name = "dns_test",
    srcs = [
        "dns_test.go",
        "osnameservers_darwin_test.go",
    ],
    embed = [":dns"],
    deps = [
        "//lib/utils",
        "//lib/utils/testutils",
        "@com_github_gravitational_trace//:trace",
        "@com_github_stretchr_testify//require",
        "@dev_gvisor_gvisor//pkg/tcpip",
    ],
