type: spiffe-workload-api
listen: unix:///var/run/spiffe.sock
svids:
  - path: /foo
    hint: hint
    sans:
      dns:
        - example.com
      ip:
        - 10.0.0.1
        - 10.42.0.1
    rules:
      - unix:
          pid: 100
          uid: 1000
          gid: 1234
        kubernetes: {}
      - unix:
          pid: 100
        kubernetes:
          namespace: my-namespace
          service_account: service-account
          pod_name: my-pod
attestors:
  kubernetes:
    enabled: true
    kubelet:
      secure_port: 12345
      token_path: /path/to/token
      ca_path: /path/to/ca.pem
      skip_verify: true
      anonymous: true
